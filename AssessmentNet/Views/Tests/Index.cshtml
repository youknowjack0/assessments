@using AssessmentNet.Models
@model IEnumerable<Test>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tests</h2>

<p>
    @ViewBag.Message
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th></th>
    </tr>

@foreach (Test item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            Clone | @Html.ActionLink("Edit", "EditQuestions", new {id = item.Id}) | @Html.ActionLink("Assign", "TestAssignment", new { id = item.Id }) | @Html.ActionLink("Results", "Results", new {id = item.Id})
        </td>
    </tr>
}

</table>
